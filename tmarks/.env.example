# Application
NODE_ENV=production
ENVIRONMENT=production
ALLOW_REGISTRATION=true
NEXT_PUBLIC_API_URL=/api/v1
NEXT_PUBLIC_SHARE_URL=/api/public

# Auth
JWT_SECRET=replace-with-a-long-random-string-at-least-48-chars
JWT_ACCESS_TOKEN_EXPIRES_IN=365d
JWT_REFRESH_TOKEN_EXPIRES_IN=365d

# Database (PostgreSQL)
POSTGRES_USER=tmarks
POSTGRES_PASSWORD=change-me
POSTGRES_DB=tmarks
DATABASE_URL=postgresql://tmarks:change-me@postgres:5432/tmarks

# Cache (Redis)
REDIS_URL=redis://redis:6379

# Storage (MinIO or local)
STORAGE_PATH=/app/storage
STORAGE_PUBLIC_URL=http://localhost:9000/tmarks
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=tmarks

# Optional: data migration
# D1_DATABASE_PATH=./d1-export.sqlite
# D1_EXPORT_SINCE=2024-01-01T00:00:00Z
